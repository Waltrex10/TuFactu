<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuevoPresupuesto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_presupuestonp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_presupuestonp"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_blanco7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_blanco"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_numeronp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/et_numeronp"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColor="#040404"
                android:textColorHint="#6C6A6C"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_fechanp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/et_fechanp"
                android:inputType="text"
                android:textColor="#040404"
                android:textColorHint="#6C6A6C"
                android:textSize="20sp"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/et_descripcionnp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/et_descripcionnp"
                android:inputType="text"
                android:textColor="#040404"
                android:textColorHint="#6C6A6C"
                android:textSize="20sp"
                android:importantForAutofill="no" />

            <Spinner
                android:id="@+id/spinnerclientesnp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/inventario_layoutp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinnerclientesnp">

            </LinearLayout>

            <Button
                android:id="@+id/but_guardarnp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/but_guardarnp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>