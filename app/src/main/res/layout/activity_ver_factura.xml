<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_facturavf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_facturavf"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_blanco5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_blanco"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_numerovf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_numerovf"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_numerovf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="no"
            android:ems="10"
            android:hint="@string/et_blanco"
            android:inputType="text"
            android:labelFor="@+id/et_numerovf"
            android:textColor="#040404"
            android:textColorHint="#6C6A6C"
            android:textSize="20sp"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/tv_fechavf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_fechavf"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_fechavf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="no"
            android:ems="10"
            android:hint="@string/et_blanco"
            android:inputType="text"
            android:labelFor="@+id/et_fechavf"
            android:textColor="#040404"
            android:textColorHint="#6C6A6C"
            android:textSize="20sp"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/tv_descripcionvf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_descripcionvf"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_descripcionvf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="no"
            android:ems="10"
            android:hint="@string/et_blanco"
            android:inputType="text"
            android:labelFor="@+id/et_descripcionvf"
            android:textColor="#040404"
            android:textColorHint="#6C6A6C"
            android:textSize="20sp"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/tv_blanco6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_blanco"
            android:textSize="20sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_guardarvf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="end"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/fab_guardarvf"
            android:src="@drawable/baseline_save_24"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_editarvf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="end"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/fab_editarvf"
            android:src="@drawable/baseline_edit_24"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_borrarvf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="end"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/fab_borrarvf"
            android:src="@drawable/baseline_restore_from_trash_24"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
</ScrollView>
